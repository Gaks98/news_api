        <h1>All Departments</h1><br><br>
        <h4>To add a department:
            <a href="/new/department"> click here</a>
        </h4>
        <br>
        <br>
        <table class="table">
            <tr>
                <th scope="col">Department Name</th>
                <th scope="col">Description</th>
                <th scope="col">Number of employees</th>


            </tr>
            {{#each departments}}
                <tr>
                    <td>{{department}}</td>
                    <td>{{description}}</td>
                    <td>{{number_employees}}</td>

                </tr>
            {{/each}}
        </table>


        <!--        </div>-->

        <div class="col-sm-2" id="col3">
            <div id="after_submit">
                <p id="message"></p>
                <p id="number_correct"></p>
                <img id="picture">
            </div>
        </div>
    </div>

</div>
</body>
</html>
